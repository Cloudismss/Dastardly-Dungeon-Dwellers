{
  "version": 10,
  "configurePresets": [
    {
      "name": "default",
      "displayName": "Default",
      "description": "Clang with Ninja build system",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "clang",
        "CMAKE_CXX_COMPILER": "clang++",
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "windows",
      "inherits": "default",
      "displayName": "Windows",
      "description": "Clang with Visual Studio 17 2022 build system",
      "generator": "Visual Studio 17 2022",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    }
  ]
}